
def build(bld):
    bld.program(target = 'FullBoreSkullStrip', 
                source = 'FullBoreSkullStrip.cpp', 
                use = 'registerIO tclap itkFourier')
    
    # this is to register IO the way CMAKE does for ITK normally
    bld.stlib(target = 'registerIO', source = 'registerIO.cpp', use = 'ITK')
    bld.stlib(target = 'itkFourier', source = 'itkFourier.cpp', use = 'ITK')
